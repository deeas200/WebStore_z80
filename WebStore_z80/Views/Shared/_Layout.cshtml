<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebStore_z80</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    @* <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebStore_z80.styles.css" asp-append-version="true" /> *@
    <!--لینک های قالب  آماده-->
    <!-- Bootstrap 5.3 RTL -->
    @* <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css" rel="stylesheet"> *@

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

    <!-- Font Vazirmatn for Persian -->
    <link href="https://cdn.jsdelivr.net/gh/rastikerdar/vazirmatn@v33.003/Vazirmatn-font-face.css" rel="stylesheet">

    <link rel="stylesheet" href="~/css/Style.css">
</head>


    <body>
        <!-- هدر اصلی -->
        <header class="main-header bg-white">
            <nav class="navbar navbar-expand-lg navbar-light container-fluid px-4">
                <!-- لوگو و برند -->
                <a class="navbar-brand" href="#">
                    <i class="bi bi-shop-window me-2"></i>
                    فروشگاه آنلاین
                </a>

                <!-- دکمه منو در موبایل -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- دکمه نمایش سایدبار در موبایل -->
                <button class="btn btn-outline-primary mobile-sidebar-toggle me-2" id="mobileSidebarToggle">
                    <i class="bi bi-filter-left"></i>
                    فیلترها
                </button>

                <!-- منوی اصلی -->
                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" href="#">خانه</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">محصولات</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">
                                دسته‌بندی‌ها
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="#">الکترونیک</a></li>
                                <li><a class="dropdown-item" href="#">پوشاک</a></li>
                                <li><a class="dropdown-item" href="#">خانه و آشپزخانه</a></li>
                                <li><a class="dropdown-item" href="#">کتاب و لوازم تحریر</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">تخفیف‌ها</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">تماس با ما</a>
                        </li>
                    </ul>

                    <!-- جستجو -->
                    <div class="search-box mx-3">
                        <input type="text" class="form-control" placeholder="جستجوی محصولات...">
                        <i class="bi bi-search"></i>
                    </div>

                    <!-- آیکون‌های سمت چپ -->
                    <div class="d-flex align-items-center gap-3">
                        <!-- دکمه تغییر حالت -->
                        <button class="btn btn-outline-secondary" id="themeToggle">
                            <i class="bi bi-moon" id="themeIcon"></i>
                        </button>

                        <!-- حساب کاربری -->
                        <div class="dropdown">
                            <button class="btn btn-outline-secondary" data-bs-toggle="dropdown">
                                <i class="bi bi-person-circle me-1"></i>
                                حساب کاربری
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" href="#"><i class="bi bi-person me-2"></i>پروفایل</a></li>
                                <li><a class="dropdown-item" href="#"><i class="bi bi-heart me-2"></i>علاقه‌مندی‌ها</a></li>
                                <li><a class="dropdown-item" href="#"><i class="bi bi-box-seam me-2"></i>سفارشات</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="#"><i class="bi bi-box-arrow-left me-2"></i>خروج</a></li>
                            </ul>
                        </div>

                        <!-- سبد خرید -->
                        <a href="#" class="btn btn-outline-primary position-relative">
                            <i class="bi bi-cart3"></i>
                            <span class="cart-count badge bg-danger rounded-pill">3</span>
                        </a>
                    </div>
                </div>
            </nav>
        </header>

        <!-- سایدبار فیلترها -->
        <aside id="shopSidebar" class="p-4">
            <!-- دکمه بستن در موبایل -->
            <div class="d-flex justify-content-between align-items-center mb-4 d-lg-none">
                <h5 class="mb-0">فیلترها و دسته‌بندی‌ها</h5>
                <button class="btn-close" id="closeSidebar"></button>
            </div>

            <!-- دسته‌بندی‌ها -->
            <div class="filter-section">
                <h6 class="mb-3"><i class="bi bi-list-task me-2"></i>دسته‌بندی‌ها</h6>
                <div class="list-group list-group-flush">
                    <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        الکترونیک
                        <span class="badge bg-primary rounded-pill">42</span>
                    </a>
                    <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        پوشاک
                        <span class="badge bg-primary rounded-pill">28</span>
                    </a>
                    <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        خانه و آشپزخانه
                        <span class="badge bg-primary rounded-pill">35</span>
                    </a>
                    <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        کتاب
                        <span class="badge bg-primary rounded-pill">19</span>
                    </a>
                    <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        اسباب‌بازی
                        <span class="badge bg-primary rounded-pill">15</span>
                    </a>
                    <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        زیبایی و سلامت
                        <span class="badge bg-primary rounded-pill">23</span>
                    </a>
                </div>
            </div>

            <!-- فیلتر قیمت -->
            <div class="filter-section">
                <h6 class="mb-3"><i class="bi bi-currency-dollar me-2"></i>محدوده قیمت</h6>
                <div class="mb-3">
                    <input type="range" class="form-range price-slider" min="0" max="10000000" step="100000" value="5000000" id="priceRange">
                    <div class="d-flex justify-content-between mt-2">
                        <small>0 تومان</small>
                        <small id="priceValue">5,000,000 تومان</small>
                        <small>10,000,000 تومان</small>
                    </div>
                </div>
            </div>

            <!-- فیلتر رنگ -->
            <div class="filter-section">
                <h6 class="mb-3"><i class="bi bi-palette me-2"></i>رنگ</h6>
                <div>
                    <span class="color-option bg-danger active" data-color="red"></span>
                    <span class="color-option bg-primary" data-color="blue"></span>
                    <span class="color-option bg-success" data-color="green"></span>
                    <span class="color-option bg-warning" data-color="yellow"></span>
                    <span class="color-option bg-dark" data-color="black"></span>
                    <span class="color-option bg-white border" data-color="white"></span>
                </div>
            </div>

            <!-- فیلتر برند -->
            <div class="filter-section">
                <h6 class="mb-3"><i class="bi bi-tags me-2"></i>برند</h6>
                <div class="form-check mb-2">
                    <input class="form-check-input" type="checkbox" id="brand1">
                    <label class="form-check-label" for="brand1">سامسونگ</label>
                </div>
                <div class="form-check mb-2">
                    <input class="form-check-input" type="checkbox" id="brand2">
                    <label class="form-check-label" for="brand2">ال‌جی</label>
                </div>
                <div class="form-check mb-2">
                    <input class="form-check-input" type="checkbox" id="brand3">
                    <label class="form-check-label" for="brand3">اپل</label>
                </div>
                <div class="form-check mb-2">
                    <input class="form-check-input" type="checkbox" id="brand4">
                    <label class="form-check-label" for="brand4">هوآوی</label>
                </div>
            </div>

            <!-- فیلتر امتیاز -->
            <div class="filter-section">
                <h6 class="mb-3"><i class="bi bi-star me-2"></i>امتیاز</h6>
                <div class="rating">
                    <i class="bi bi-star-fill text-warning"></i>
                    <i class="bi bi-star-fill text-warning"></i>
                    <i class="bi bi-star-fill text-warning"></i>
                    <i class="bi bi-star-fill text-warning"></i>
                    <i class="bi bi-star text-warning"></i>
                    <span class="text-muted ms-2">و بالاتر</span>
                </div>
                <div class="rating mt-2">
                    <i class="bi bi-star-fill text-warning"></i>
                    <i class="bi bi-star-fill text-warning"></i>
                    <i class="bi bi-star-fill text-warning"></i>
                    <i class="bi bi-star text-warning"></i>
                    <i class="bi bi-star text-warning"></i>
                    <span class="text-muted ms-2">و بالاتر</span>
                </div>
            </div>

            <!-- تخفیف ویژه -->
            <div class="mt-4 p-3 bg-warning bg-opacity-10 rounded border border-warning">
                <h6 class="mb-2"><i class="bi bi-lightning-charge me-2"></i>تخفیف ویژه</h6>
                <p class="small mb-2">تا 50% تخفیف برای خریدهای بالای 500 هزار تومان</p>
                <div class="offer-timer text-center mb-2">
                    <span id="countdown">23:59:59</span>
                </div>
            </div>
        </aside>

        <!-- Overlay برای موبایل -->
        <div class="mobile-overlay" id="mobileOverlay"></div>

        <!-- محتوای اصلی -->
        <main id="mainContent" class="bg-body-tertiary">
        
            @RenderBody()

            <!-- بنر تبلیغاتی -->
            <section class="container-fluid px-4 mb-5">
                <div class="row">
                    <div class="col-12">
                        <div class="bg-dark text-white rounded p-5 text-center">
                            <h2 class="mb-3">ارسال رایگان برای خریدهای بالای 200 هزار تومان</h2>
                            <p class="mb-4">سفارشات خود را با اطمینان و سریع دریافت کنید</p>
                            <a href="#" class="btn btn-primary btn-lg">همین حالا خرید کنید</a>
                        </div>
                    </div>
                </div>
            </section>

            <!-- فوتر -->
            <footer class="bg-white border-top">
                <div class="container-fluid px-4 py-5">
                    <div class="row g-4">
                        <!-- درباره ما -->
                        <div class="col-lg-4 col-md-6">
                            <h5 class="mb-3"><i class="bi bi-shop-window me-2"></i>فروشگاه آنلاین</h5>
                            <p class="text-muted">ما با ارائه بهترین محصولات و خدمات، تجربه خرید آسان و مطمئن را برای شما فراهم کرده‌ایم.</p>
                            <div class="d-flex gap-3 mt-4">
                                <a href="#" class="text-secondary"><i class="bi bi-instagram fs-5"></i></a>
                                <a href="#" class="text-secondary"><i class="bi bi-telegram fs-5"></i></a>
                                <a href="#" class="text-secondary"><i class="bi bi-twitter fs-5"></i></a>
                                <a href="#" class="text-secondary"><i class="bi bi-linkedin fs-5"></i></a>
                            </div>
                        </div>

                        <!-- لینک‌های سریع -->
                        <div class="col-lg-2 col-md-6">
                            <h6 class="mb-3">لینک‌های سریع</h6>
                            <div class="footer-links">
                                <p><a href="#">خانه</a></p>
                                <p><a href="#">محصولات</a></p>
                                <p><a href="#">درباره ما</a></p>
                                <p><a href="#">تماس با ما</a></p>
                            </div>
                        </div>

                        <!-- خدمات مشتریان -->
                        <div class="col-lg-3 col-md-6">
                            <h6 class="mb-3">خدمات مشتریان</h6>
                            <div class="footer-links">
                                <p><a href="#">سوالات متداول</a></p>
                                <p><a href="#">روش‌های پرداخت</a></p>
                                <p><a href="#">شرایط بازگشت کالا</a></p>
                                <p><a href="#">حریم خصوصی</a></p>
                            </div>
                        </div>

                        <!-- تماس با ما -->
                        <div class="col-lg-3 col-md-6">
                            <h6 class="mb-3">تماس با ما</h6>
                            <p><i class="bi bi-geo-alt me-2"></i>تهران، خیابان ولیعصر</p>
                            <p><i class="bi bi-telephone me-2"></i>021-12345678</p>
                            <p><i class="bi bi-envelope me-2"></i>info@shop.com</p>
                        </div>
                    </div>

                    <hr class="my-4">

                    <!-- کپی رایت -->
                    <div class="row">
                        <div class="col-md-6 text-center text-md-start">
                            <p class="text-muted mb-0">© 2026 فروشگاه آنلاین. کلیه حقوق محفوظ است.</p>
                        </div>
                        <div class="col-md-6 text-center text-md-end">
                            <img src="https://via.placeholder.com/40x25/6C757D/FFFFFF?text=PM" alt="پرداخت" class="me-2">
                            <img src="https://via.placeholder.com/40x25/0D6EFD/FFFFFF?text=Card" alt="کارت" class="me-2">
                            <img src="https://via.placeholder.com/40x25/198754/FFFFFF?text=Bank" alt="بانک">
                        </div>
                    </div>
                </div>
            </footer>
        </main>

        <!-- Bootstrap JS -->
        @* <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script> *@

        <script src="~/js/Javascript.js"></script>
       
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
